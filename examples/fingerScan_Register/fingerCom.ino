uint8_t readnumber(void) {
  uint8_t num = 0;

  while (num == 0) {
    while (! Serial.available())
    num = Serial.parseInt();
    if((millis()-currentFingerReg)>intervalFingerReg){
      Serial.println("timeout");
      break;
      return -1;
    }
  }
  return num;
}

